                        </li>
                    </ul>
                </li>
            </ul>
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li>
                        <a href="/admin"><i class="fa fa-fw fa-dashboard"></i> Dashboard</a>
                    </li>
					<li class="active">
						<a href="/admin/load"><i class="fa fa-fw fa-dashboard"></i> Load Database</a>
					</li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>

        <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Dashboard <small>Add Users to Database</small>
                        </h1>
                        <ol class="breadcrumb">
                            <li class="active">
                                <i class="fa fa-dashboard"></i> Load
                            </li>
                        </ol>
                    </div>
                </div>
                <!-- /.row -->
				<%if (message && message.code ==1 ) {%>
	                <div class="alert alert-danger">
    	                Sorry this ID already exists in the database. Pkease try again with a different ID</br>
        	        </div>
            	<%} else if (message && message.code ==2) {%>
                	<div class="alert alert-success">
						Successfully added invitation to the database. Thank you!
                	</div>
            	<%} %>

                <div class="row">
					<div class="col-lg-10 col-lg-offset-1">
					<form id="load" method="post" action="/admin/load">
						<div class="form-group">
							<label for="cardID">Invitation ID:</label>
							<input type="number" id="cardID" name="cardID" class="form-control">
						</div>
						<div class="form-group">
							<label for="invitationFamily">Name on Invitation:</label>
							<input type="text" id="invitationFamily" name="invitationFamily" class="form-control">
						</div>
						<div class="form-group">
							<label for="numberOfRSVP">Number of RSVPs Allotted:</label>
							<input type="number" id="numberOfRSVP" name="numberOfRSVP" class="form-control">
						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-dark btn-md">Submit</button>
						</div>
					</form>
					</div>
                </div>
                <!-- /.row -->
				<div class="row">

                </div>
                <!-- /.row -->

            </div>
            <!-- /.container-fluid -->

        </div>
